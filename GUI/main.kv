MDScreen :
    name: "main"
    MDFloatLayout:
        md_bg_color: 1, 1, 1, 1
        Image:
            source: "chatbots.jpg"
            size_hint: .8, .5
            pos_hint: {"center_x": .5,"center_y": .8}
        MDLabel:
            text: 'Hello there!'
            bold: True
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: 'Your Virtual Assistant is Ready for the service'
            font_name: "Poppins-Regular.ttf"
            font_size: "18sp"
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .40}
            halign: "center"
            theme_text_color: "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: 'Read Me First'
            font_name: "Poppins-Regular.ttf"
            font_size: "18sp"
            size_hint_x: .9
            pos_hint: {"center_x": .5, "center_y": .30}
            halign: "center"
            underline: True
            theme_text_color: "Custom"
            text_color: 1, 170/255, 23/255, 1

        MDFloatLayout :
            size_hint: .85, .2
            pos_hint: {"center_x": .5, "center_y": .22}
            canvas :
                Color :
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22,22,22,22]
            TextInput:
                multiline: False
                hint_text: "What Should I call You?"
                size_hint: 1, 0.5
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: "18sp"
                cursor_color: 1, 178/255, 23/255, 1
                foreground_color: 1, 170/255, 23/255, 1
                background_color: 0,0,0,0
                font_name: "Poppins-Regular.ttf"

            Button:
                text: "Let's Begin"
                size_hint: .45, .3
                pos_hint: {"center_x": .5, "center_y": .1}
                background_color: 0,0,0,0
                on_release:
                    root.manager.transition.direction = "left"
                    root.manager.current = "chats"
                canvas.before:
                    Color :
                        rgb: (1, 178/255, 23/255, 1)
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [22,22,22,22]

